<div class="container"><h1> Votre panier </h1>

<div class="row">
    <div class="col-sm-12 col-sm-12 col-md-offset-1">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th class="text-center">Prix</th>
                    <th class="text-center">Total</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                
            <% @cart.medias.each do |i| %> 
                <tr>
                  <td class="col-md-6">
                    <div class="media">
                      <div class="image_thumbnail"><%= image_tag i.picture, alt: 'picture', class: "border rounded"%> </div>
                        <div class="media-body">
                            <h4 class="media-heading"><a href="#"><%=i.title%></a></h4>
                            <p> <b>Description</b> : <%=i.description%></p>
                        </div>
                    </div></td>
                    <td class="col-md-1 text-center"><strong><%=i.price%></strong></td>
                    <td class="col-md-1">
                    <%= link_to "Enlever", media_cart_path(i.id, -1), method: "patch", class: "btn btn-danger" %>
                </tr>
            <%end%>
                <tr>
                    <td>   </td>
                    <td><h5>Sous-total</h5></td>
                    <td class="text-right"><h5>
                    <% sum = 0 %>
                    <% @cart.medias.each { |i| sum+=i.price } %> 
                    <%= sum %>
                    </h5></td>
                </tr>

                <tr>

                    <td>   </td>
                    <td><h3>Total</h3></td>
                    <td class="text-right"><h3><strong><%=sum%></strong></h3></td>
                </tr>
            </tbody>
        </table>
        <div style="display: flex; justify-content: flex-end; margin-right: 50px;">
                    <% if @cart.medias.length != 0 %>

                        <%= link_to 'Commander', new_charge_path, class: "btn btn-success" %>

                    <% else %>

                        <div class="btn btn-success muted">Commander</div>

                    <% end %>
        </div>
    </div>
</div>
</div>