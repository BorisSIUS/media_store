<div class='card'>
  <%= form_for @media, url: {action: "create"} do |f| %>
    <div class="form-group">
      <label> Titre du media</label></br>
      <%= f.text_field :title, class: 'form_control w-25'%>
    </div>
    <div class="form-group">
      <label> Description</label></br>
      <%= f.text_area :description, class: 'form_control w-100', style: "height: 300px"%>
    </div>
    <div class="form-group">
      <label> Prix</label></br>
      <%= f.text_field :price, class: 'form_control'%>
    </div>
    <%= f.fields_for :picture  do |p| %>
        <%= p.file_field :picture , :multiple => true, name: :picture %>
    <% end %>
    <div class="form-group">
      <button type="submit", class='btn btn-primary'> Envoyer </button>
    </div>    
  <%end%>
</div>