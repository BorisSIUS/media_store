<h1>w a t e r l e m o n | a g e n c y</h1>
<p>presents you</p>


<div style="display: flex; flex-wrap: wrap; justify-content: space-around; margin: 30px;">

	<% @medias.each do |media| %>

		<div class="card" style="width: 300px; margin: 15px;">

			<div class="card-body">

				<a href="<%= media_path(media.id)%>">
				<img src="<%= media.url %>" style="width: 100%; height: auto;">
			</a>

			</div>

			<div class="card-footer" style="display: flex; flex-direction: row; justify-content: space-between;">

				<div >

					<%= media.title %>
						
				</div>

				<div>
					
				$	<%= media.price %>
						
				</div>

			</div>

		</div>

	<% end %>

</div>
